doctype html
html
	head
		block title
			title default
		link(href="/stylesheet.css" rel="stylesheet")
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
		script(src="/worklist.js")
	body
		nav
			if user
				p
					span Welcome #{ user }!
					a(href="/logout") Log Out
			else
				a(href="/login") Log In

		#content
			block content